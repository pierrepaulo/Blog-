generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement())
  slug String @unique
  authorId Int
  status PostStatus @default(DRAFT)
  title String
  createdAt DateTime @default(now())
  updatedAt DateTime?
  cover String
  tags String @default("")
  author User? @relation(fields: [authorId], references: [id])
}

model User {
  id Int @id @default(autoincrement())
  status Boolean @default(true)
  name String
  email String
  password String
  posts Post[]
}

enum PostStatus {
  PUBLISHED
  DRAFT
}